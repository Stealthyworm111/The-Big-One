<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('partials/meta') %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: rgb(233, 232, 227);
    }
    
    #loginRegisterContainer {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    form {
        max-width: 300px;
        margin: 20px;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        height: 40vh;   
    }
    .formButton {
        width: 100px;
        margin-top: 20%;
    }
    h2 {
        text-align: center;
    }
    #sidebar {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        left: 0;
        background-color: #111;
        overflow-x: hidden;
        padding-top: 20px;
        color: black;
        text-align: center;
        transition: 0.5s;
    }
    #sidebar a {
        padding: 10px;
        text-decoration: none;
        font-size: 18px;
        color: #818181;
        display: block;
        transition: 0.3s;
    }
    #sidebar a:hover {
        color: #f1f1f1;
    }
    #main {
        transition: margin-left 0.5s;
        padding: 32px;
    }
    #toggle-btn {
        font-size: 24px;
        cursor: pointer;
        color: white;
        position: fixed;
        margin-left: 10px;
        margin-top: 10px;
        transition: 0.5s;
    }
    #toggle-btn.expanded {
        transform: rotate(360deg);
        color: black;
    }
    #button1{
        background-color: aquamarine;
        padding-left: 100px;
        padding-right: 100px;
        color: black;
        border-width: 0;
    }
    #button1:hover{
        background-color: white;
        transition: 0.5s;
    }
    @keyframes rainbowAnimation {
        0% { color: black;Text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #ffffff, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;}
        50% { color: white;Text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black;}
      }
      #rainbowtag{
        animation: rainbowAnimation 5s infinite;
        font-weight: bold;
        text-shadow: -1px -1px 0 #ffffff, 1px -1px 0 #ffffff, -1px 1px 0 #ffffff, 1px 1px 0 #ffffff;
      }</style>
<body>
    <div id="sidebar">
        <div  id="toggle-btn" class="expanded" onclick="toggleSidebar()">ð“†¤</div>
        <a href="/Running">Running Tracker</a>
        <a href="#">MPG Calculator</a>
        <a href="#">To-Do List</a>
    </div>
    
    <div id="main">
        <!-- Content goes here -->
        <h1 style="text-align: center;">Running Gourd Board</h1>
    </div>
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            var main = document.getElementById('main');
            var toggleBtn = document.getElementById('toggle-btn');
    
            if (sidebar.style.width === '250px') {
                sidebar.style.width = '0';
                main.style.marginLeft = '0';
                
            } else {
                sidebar.style.width = '250px';
                main.style.marginLeft = '250px';
            }
            toggleBtn.classList.toggle('expanded');
        }
    </script>
</body>
</html>
